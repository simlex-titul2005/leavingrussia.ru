@model VMArticle
@{
    var isNew = (bool)ViewData["isNew"];
}

<form method="post" action="@Url.Action("Edit", "Articles")">
    @Html.AntiForgeryToken()

    @if (!isNew)
    {
        @Html.HiddenFor(x => x.DateCreate)
        @Html.HiddenFor(x => x.DateUpdate)
    }

    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(x => x.Title, new { @class = "control-label" })
                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                @Html.ValidationMessageFor(x => x.Title)
            </div>
        </div>
        <div class="col-md-@(isNew?3:2)">
            <div class="form-group">
                @Html.LabelFor(x => x.Show, new { @class = "control-label" })
                @Html.EditorFor(x => x.Show, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                @Html.ValidationMessageFor(x => x.Show)
            </div>
        </div>
        <div class="col-md-@(isNew?3:2)">
            <div class="form-group">
                @Html.LabelFor(x => x.IsTop, new { @class = "control-label" })
                @Html.EditorFor(x => x.IsTop, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                @Html.ValidationMessageFor(x => x.IsTop)
            </div>
        </div>
        @if (!isNew)
        {
            <div class="col-md-2">
                <div class="form-group">
                    @Html.LabelFor(x => x.DateOfPublication, new { @class = "control-label" })
                    @Html.EditorFor(x => x.DateOfPublication, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                    @Html.ValidationMessageFor(x => x.DateOfPublication)
                </div>
            </div>
        }
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.TitleUrl, new { @class = "control-label" }) <span class="text-info"> (применяется для уникальной идентификации материала)</span>
        @Html.EditorFor(x => x.TitleUrl, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
        @Html.ValidationMessageFor(x => x.TitleUrl)
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(x => x.CategoryId, new { @class = "control-label" })
                @Html.EditorFor(x => x.CategoryId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                @Html.ValidationMessageFor(x => x.CategoryId)
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                @Html.LabelFor(x => x.FrontPictureId, new { @class = "control-label" })
                @Html.EditorFor(x => x.FrontPictureId, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                @Html.ValidationMessageFor(x => x.FrontPictureId)
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                @Html.LabelFor(x => x.ShowFrontPictureOnDetailPage, new { @class = "control-label" })
                @Html.EditorFor(x => x.ShowFrontPictureOnDetailPage, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
                @Html.ValidationMessageFor(x => x.ShowFrontPictureOnDetailPage)
            </div>
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Foreword, new { @class = "control-label" })
        @Html.EditorFor(x => x.Foreword, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
        @Html.ValidationMessageFor(x => x.Foreword)
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.Html, new { @class = "control-label" })
        @Html.EditorFor(x => x.Html, new { htmlAttributes = new { @class = "form-control", @placeholder = "Введите название материала" } })
        @Html.ValidationMessageFor(x => x.Html)
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">@(isNew ? "Сохранить" : "Добавить")</button>
        <a href="@Url.Action("Index", "Articles")" class="btn btn-default">Назад</a>
    </div>

</form>
