@model SxVMEditAppUser
@{
    var isNew = string.IsNullOrEmpty(Model.Id);
    var userName = Model.NikName ?? Model.Email;
    ViewBag.Title = isNew ? "Добавить пользователя" : "Редактировать пользователя \"" + userName + "\"";
}

@section styles{
    <style type="text/css">
        .user .img-circle{
            width:70px;
            border:3px solid #ddd;
        }
    </style>
    }

<div>
    <a class="btn btn-default" href="@Url.Action("index")">Назад</a>
</div>

<h2>@ViewBag.Title</h2>

<div class="user">
    @if (Model.AvatarId.HasValue)
            {
        <div>
            <img class="img-circle" alt="@userName" src="@Url.Action("picture", new { controller = "pictures", id = Model.AvatarId })" />
        </div>
    }
    <div class="row">
        <div class="col-md-4">
            <section>
                <h3 class="text-warning">Статус</h3>
                <table class="table table-striped table-condensed">
                    <tbody>
                        <tr>
                            <td>Онлайн</td>
                            <td class="is-online">
                                @if (Model.IsOnline)
                                {<span class="badge">Да</span>}
                            </td>
                        </tr>
                        <tr>
                            <td>Email</td>
                            <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <section id="roles">
                @Html.Partial("_UserRoles", Model)
            </section>

            <section id="info">
                @Html.Partial("_UserInfo", Model)
            </section>
        </div>

        <div class="col-md-8">
            <section id="subscription">
                @Html.Partial("_UserReports", new int[] { 1, 2, 3 })
            </section>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/content/dist/js/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript">
        function removeMessage(id) {
            setTimeout(function () {
                $(id).fadeOut('fast');
            }, 1000);
        }

        $(function () {
            $('#AvatarId').sx_gvl();
        });
    </script>
}