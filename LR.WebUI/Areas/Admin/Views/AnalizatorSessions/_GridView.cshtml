@model SxVMAnalizatorSession[]
@{ 
    int? sessionId = ViewBag.SessionId;
}

@Html.SxGridView(Model, new SxExtantions.SxGridViewSettings<SxVMAnalizatorSession>
{
    Columns = new SxExtantions.SxGridViewColumn<SxVMAnalizatorSession>[] {
                new SxExtantions.SxGridViewColumn<SxVMAnalizatorSession> { FieldName="DateCreate", Caption="Дата"},
                new SxExtantions.SxGridViewColumn<SxVMAnalizatorSession> { FieldName="UrlsCount", Caption="Количество адресов"}
            },
    DataAjaxUrl = Url.Action("Index", "AnalizatorSessions", new { sessionId = sessionId }),
    RowCssClass = x => { return sessionId == x.Id ? "success" : null; },
    ShowPagerInfo=true,
    EnableDeleting=true,
    DeleteRowUrl=x=> { return Url.Action("Delete", "AnalizatorSessions", new { sessionId = x.Id }); }
})
