@model SxVMSiteNet[]
@{
    SxVMSiteNet item = null;
}
@if (Model.Any())
{
    <aside class="join-us">
        <h4 class="green-header"><span class="green-header__arrow">Присоединяйся к нам!</span></h4>
        <div class="join-us__icons">
            <ul class="list-unstyled list-inline">
                @for (int i = 0; i < Model.Length; i++)
                {
                    item = Model[i];
                    <li style="width: @(Math.Round((decimal)100/Model.Length, 2).ToString()+"%")">
                        <a href="@item.Url" target="_blank"><i class="@item.Net.LogoCssClass" aria-hidden="true"></i></a>
                    </li>
                }
            </ul>
        </div>
        <br />
    </aside>
}
