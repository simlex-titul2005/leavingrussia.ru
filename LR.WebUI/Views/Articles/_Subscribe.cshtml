@model SxVMSubscriber

@{ 
    Layout = null;
    var subscribeTitle = SX.WebCore.MvcApplication.SxMvcApplication.SiteSettingsProvider["subscribe-title"]?.Value ?? "Подписка на рассылку новых сообщений в блогах, советы и фотографии";
}

<div class="subscribe">
    <div class="subscribe__intro">
        @subscribeTitle
    </div>

    <form method="post" action="@Url.Action("Subscribe", "Articles")">
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.EditorFor(x => x.Name, new { htmlAttributes = new { @class = "form-control", @placeholder="Имя..." } })
            @Html.ValidationMessageFor(x=>x.Name)
        </div>

        <div class="form-group">
            @Html.EditorFor(x => x.Email, new { htmlAttributes = new { @class = "form-control", @placeholder = "Email..." } })
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group">
            <button type="submit" class="btn">Подписаться</button>
        </div>
    </form>
</div>
