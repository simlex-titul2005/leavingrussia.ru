@model SxVMPicture[]
@{
    SxVMPicture item = null;
}

@if (Model.Any())
{
    <aside class="last-pictures">
        <h4 class="green-header"><span class="green-header__arrow">Последние фото</span></h4>
        <div class="last-pictures__box">
            <ul>
                @for (int i = 0; i < Model.Length; i++)
                {
                    item = Model[i];
                    <li>
                        <a href="#" class="last-pictures__img" style="background-image:url('@Url.Action("Picture", "Pictures", new { id=item.Id})')"></a>
                    </li>
                }
            </ul>
        </div>
        <br />
        <br />
    </aside>
}