@model SxVMPicture[]
@{
    SxVMPicture item = null;
    var amount = (int)ViewBag.Amount;
    var followTitle = SX.WebCore.MvcApplication.SxMvcApplication.SiteSettingsProvider["folloe-instagram-title"]?.Value ?? "Мы в инстаграме";
}

@if (Model.Any() && Model.Length==amount)
{
    <div class="best-pictures">
        <h4 class="best-pictures-instagram"><span><span class="title">@followTitle</span></span></h4>
        <ul>
            @for (int i = 0; i < Model.Length; i++)
            {
                item = Model[i];
                <li>
                    <a href="#" style="background-image:url('@Url.Action("Picture", "Pictures", new { id = item.Id })')"></a>
                </li>
            }
        </ul>
    </div>
}
